{
  "name": "redux-weapp",
  "version": "0.1.0",
  "description": "Redux-based State Management for Wechat applet(微信小程序, weapp)",
  "main": "dist/index.js",
  "scripts": {
    "pretest": "eslint es6",
    "test": "jest",
    "build": "npm test && rimraf dist/* && webpack --progress --colors --config webpack.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/xixilive/redux-weapp.git"
  },
  "keywords": [
    "redux",
    "wechat",
    "weixin",
    "state",
    "store",
    "applet",
    "weapp"
  ],
  "author": "xixilive@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xixilive/redux-weapp/issues"
  },
  "homepage": "https://github.com/xixilive/redux-weapp#readme",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.0.6",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "eslint": "^4.15.0",
    "jest-cli": "^22.0.6",
    "redux": "^3.6.0",
    "rimraf": "^2.5.4",
    "webpack": "^3.10.0"
  },
  "jest": {
    "automock": false,
    "bail": true,
    "transform": {
      ".js": "<rootDir>/node_modules/babel-jest"
    },
    "testPathDirs": [
      "<rootDir>/__tests__/"
    ],
    "testRegex": ".test.js$",
    "unmockedModulePathPatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
